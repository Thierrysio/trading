{# templates/action/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Actions et leurs Cours{% endblock %}

{% block body %}
  <h1>Liste des Actions et leurs Cours</h1>
  {% for action in actions %}
    <h2>Action: {{ action.nom }}</h2>
    <ul>
      {% for coursAction in action.lescoursaction %}
        <li>Date: {{ coursAction.datecoursaction|date('Y-m-d') }}, Prix: {{ coursAction.prix }}</li>
      {% else %}
        <li>Aucun cours d'action trouvé pour cette action.</li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Aucune action trouvée.</p>
  {% endfor %}
{% endblock %}
