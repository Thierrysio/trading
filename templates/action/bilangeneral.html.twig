{# templates/action/bilangeneral.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Bilan Général{% endblock %}

{% block body %}
<h1>Bilan Général pour {{ trader.nom }} et {{ action.nom }}</h1>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Quantité</th>
            <th>Prix Unitaire</th>
            <th>Montant Total</th>
        </tr>
    </thead>
    <tbody>
        {% for transaction in transactions %}
        <tr>
            <td>{{ transaction.datetransaction|date('Y-m-d') }}</td>
            <td>{{ transaction.operation }}</td>
            <td>{{ transaction.quantite }}</td>
            <td>{{ transaction.coursTransaction }}</td>
            <td>{{ transaction.quantite * transaction.coursTransaction }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
